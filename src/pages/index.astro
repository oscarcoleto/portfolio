---
import ProgressCircle from "../components/progressCircle.astro";
import Layout from "../layouts/Layout.astro";

---
<Layout title="Óscar Coleto | portfolio">
    <main id="prueba" class="relative z-10 h-screen py-8">
        <div class="flex flex-col md:flex-row items-center justify-around w-full px-8">
            <!-- Div con el borde -->
            <div class="border-8 mb-8 mt-10 ml-8 md:mb-0 md:mr-8 md:w-1/3 w-60 border-neon text-neon" id="poster">
                <div class="font-allerta text-4xl md:text-7xl mb-4 text-white ml-2">Full Stack
                </div>
                <div class="font-allerta text-right text-4xl md:text-7xl mb-4 text-white mr-2">Developer
                </div>
                <div class="mb-4">
                    <img src="yo-comic-ojos-marron.jpg" class="w-full" alt="" />
                </div>
                <div class="font-allerta text-center text-5xl md:text-7xl text-white cursor-pointer mb-2">
                    <a href="/career" class="hover:text-neon">Start</a>
                </div>
            </div>
            <!-- Div con el nombre -->
            <div class="text-center md:text-left">
                <div class="font-allerta text-5xl md:text-7xl text-white cursor-pointer mb-2 text-neon">
                    Óscar Coleto
                </div>
                <div class="font-allerta text-5xl md:text-7xl text-center text-white cursor-pointer mb-2 text-neon">
                    -
                </div>
                <div class="font-allerta text-5xl md:text-7xl text-center text-white cursor-pointer mb-2 text-neon">
                    Portfolio
                </div>
                <div class="text-center md:text-center">
                    <ProgressCircle total="7"></ProgressCircle>
                </div>
            </div>
            
        </div>
    </main>
</Layout>
<style>
    @keyframes neon {
        0% {
            text-shadow:
                0 0 10px #fff,
                0 0 20px #fff,
                0 0 30px #fff,
                0 0 40px #00f,
                0 0 70px #00f,
                0 0 80px #00f,
                0 0 100px #00f,
                0 0 150px #00f;
        }
        50% {
            text-shadow:
                0 0 5px #fff,
                0 0 15px #fff,
                0 0 25px #fff,
                0 0 35px #00f,
                0 0 65px #00f,
                0 0 75px #00f,
                0 0 95px #00f,
                0 0 145px #00f;
        }
        100% {
            text-shadow:
                0 0 10px #fff,
                0 0 20px #fff,
                0 0 30px #fff,
                0 0 40px #00f,
                0 0 70px #00f,
                0 0 80px #00f,
                0 0 100px #00f,
                0 0 150px #00f;
        }
    }

    .hover\:text-neon:hover {
        animation: neon 1.5s ease-in-out infinite alternate;
    }

    .text-neon{        
        text-shadow: 0 0 20px rgba(0, 255, 195, 0.8);
    }

    .border-neon{
        box-shadow: 0 0 20px 0 rgba(0, 255, 195) inset, 0 0 20px 0 rgba(0, 255, 195); /* Amarillo */
    }
</style>
